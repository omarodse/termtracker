<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TermTracker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary theme colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorAccent</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="textAppearanceButton">@style/TextAppearance.AppCompat.Button</item>

        <!-- Toolbar style -->
        <item name="toolbarStyle">@style/MyToolbarStyle</item>
    </style>

    <!-- Toolbar style -->
    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextAppearance">@style/MyToolbarTitleText</item>
    </style>

    <!-- Text appearances for toolbar -->
    <style name="MyToolbarTitleText" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <!-- Headline text -->
    <style name="headlineText" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <!-- Headline text recycler item -->
    <style name="cardTitle" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Regular text recycler item -->
    <style name="regularText" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <!-- Bottom navigation -->
    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/colorOnPrimary</item>
        <item name="itemTextColor">@color/colorOnPrimary</item>
        <item name="itemRippleColor">@color/colorAccent</item>
    </style>

    <!-- Floating Action Button -->
    <style name="Widget.MyApp.FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="fabSize">normal</item>
        <item name="tint">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="rippleColor">@color/colorOnPrimary</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <!-- TextInputLayout -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/fieldColor</item>
        <item name="boxStrokeColor">@color/text_input_outline_color</item>
        <item name="hintTextColor">@color/colorOnPrimary</item>
        <item name="android:textColorHint">@color/colorOnPrimary</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- TextInputEditText -->
    <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Custom style for Form LinearLayout -->
    <style name="FormLinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:padding">12dp</item>
        <item name="android:divider">@drawable/fields_divider</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerPadding">16dp</item>
    </style>

    <!-- Custom style for Save form Button -->
    <style name="FormSaveButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

</resources>