<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TermTracker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary theme colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorAccent</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="textAppearanceButton">@style/TextAppearance.AppCompat.Button</item>

        <!-- Toolbar style -->
        <item name="toolbarStyle">@style/MyToolbarStyle</item>
    </style>

    <!-- Toolbar style -->
    <style name="MyToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextAppearance">@style/MyToolbarTitleText</item>
    </style>

    <!-- Text appearances for toolbar -->
    <style name="MyToolbarTitleText" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <!-- Headline text -->
    <style name="headlineText" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <!-- Headline text recycler item -->
    <style name="cardTitle" parent="@style/TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Regular text recycler item -->
    <style name="regularText" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <!-- Bottom navigation -->
    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/colorOnPrimary</item>
        <item name="itemTextColor">@color/colorOnPrimary</item>
        <item name="itemRippleColor">@color/colorAccent</item>
    </style>

    <!-- Floating Action Button -->
    <style name="Widget.MyApp.FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="fabSize">normal</item>
        <item name="tint">@color/colorPrimary</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="rippleColor">@color/colorOnPrimary</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>


</resources>